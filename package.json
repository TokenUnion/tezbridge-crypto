    "url": "https://github.com/tezbridge/tezbridge-crypto/issues"
  },
  "homepage": "https://github.com/tezbridge/tezbridge-crypto#readme",
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-transform-flow-strip-types": "^7.2.0",
    "flow-bin": "^0.88.0"
  },
  "dependencies": {
    "bip39": "^2.5.0",
    "blakejs": "^1.1.0",
    "bn.js": "^4.11.8",
